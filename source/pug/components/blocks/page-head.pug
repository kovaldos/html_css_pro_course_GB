mixin page-head(mods)
	-
		const data = {
			productPage: {
				title: "New Arrivals",
				breadcrumbs: [
					{
						link: "index.html",
						text: "Home"
					},
					{
						link: "/catalog/women",
						text: "women",
					},
					{
						link: "/catalog/new-arrivals",
						text: "new-arrivals",
					},
				],
			},
			catalogPage: {
				title: "Catalog",
				breadcrumbs: [
					{
						link: "index.html",
						text: "Home"
					},
					{
						link: "/catalog",
						text: "catalog",
					},
				],
			},
			cartPage: {
				title: "Shopping cart",
			}
		}

	.page-head(class="page-head--" + mods)
		.container.page-head__container
			if mods === "product-page"
				h1.title.title--h1.page-head__title=data.productPage.title
				+breadcrumbs(data.productPage.breadcrumbs)

			else if mods === "catalog-page"
				h1.title.title--h1.page-head__title=data.catalogPage.title
				+breadcrumbs(data.catalogPage.breadcrumbs)

			else if mods === "cart"
				h1.title.title--h1.page-head__title=data.cartPage.title